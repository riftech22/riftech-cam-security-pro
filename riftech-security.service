[Unit]
Description=Riftech Security System - AI-Powered Security Camera
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/riftech-cam-security-pro
Environment="PATH=/root/riftech-cam-security-pro/venv/bin:/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/root/riftech-cam-security-pro/venv/bin/python /root/riftech-cam-security-pro/main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=riftech-security

[Install]
WantedBy=multi-user.target
